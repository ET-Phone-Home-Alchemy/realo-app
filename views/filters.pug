extends _layout.pug

block styles
  include css/filters.css

block content
  button#logoutButton Logout
  p Add a new filter
  form(id="add-filter" action="/api/v1/filter" method="post")
    input(type="text" name="filterName" placeholder="name of filter" required)
    input(type="number" name="squareFeetMin" placeholder="sqft-minimum" required)
    input(type="number" name="squareFeetMax" placeholder="sqft-maximum" required)
    label Min Beds
      select(name="bedMin") 
        option(value="0") 0
        option(value="1") 1
        option(value="2") 2
        option(value="3") 3
        option(value="4") 4
        option(value="5") 5
        option(value="6") 6
        option(value="7") 7
        option(value="8") 8
        option(value="9") 9
        option(value="10") 10
        option(value="11") 11
        option(value="12") 12
        option(value="13") 13
        option(value="14") 14
        option(value="15") 15
    label Max Beds
      select(name="bedMax")
        option(value="0") 0
        option(value="1") 1
        option(value="2") 2
        option(value="3") 3
        option(value="4") 4
        option(value="5") 5
        option(value="6") 6
        option(value="7") 7
        option(value="8") 8
        option(value="9") 9
        option(value="10") 10
        option(value="11") 11
        option(value="12") 12
        option(value="13") 13
        option(value="14") 14
        option(value="15") 15
    label Min Baths
      select(name="bathMin")
        option(value="0") 0
        option(value="1") 1
        option(value="2") 2
        option(value="3") 3
        option(value="4") 4
        option(value="5") 5
        option(value="6") 6
        option(value="7") 7
        option(value="8") 8
        option(value="9") 9
        option(value="10") 10
        option(value="11") 11
        option(value="12") 12
        option(value="13") 13
        option(value="14") 14
        option(value="15") 15
    label Max Baths
      select(name="bathMax")
        option(value="0") 0
        option(value="1") 1
        option(value="2") 2
        option(value="3") 3
        option(value="4") 4
        option(value="5") 5
        option(value="6") 6
        option(value="7") 7
        option(value="8") 8
        option(value="9") 9
        option(value="10") 10
        option(value="11") 11
        option(value="12") 12
        option(value="13") 13
        option(value="14") 14
        option(value="15") 15
    input(type="number" name="priceMin" placeholder="price-minimum" required)
    input(type="number" name="priceMax" placeholder="price-maximum" required)
    button#submitButton Add Filter
  h1 Saved Filters
    ul
      each filter in filters
        li
          span Name #{filter.filterName}, 
          span sqft-min #{filter.squareFeetMin}, 
          span sqft-max #{filter.squareFeetMax}, 
          span bed-min #{filter.bedMin}, 
          span bed-max #{filter.bedMax}, 
          span bath-min #{filter.bathMin}, 
          span bath-max #{filter.bathMax}, 
          span price-min #{filter.priceMin}, 
          span price-max #{filter.priceMax}, 
          span userId #{filter.userId}
          button.delete-button(id=filter.filterId) Delete Filter #{filter.filterId}
 
  script
    include js/filters.js
    include js/buttonLogic.js
  